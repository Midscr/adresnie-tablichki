                        input.calc__add_checkbox(type="checkbox", for="lamination", name="add", value="Ламинирование (+5 лет гарантии)")
                        .checkbox
                        .checkbox_label Ламинирование (5 лет гарантии)
                    label#reflective
                        input.calc__add_checkbox(type="checkbox", for="reflective", name="add", value="Световозвращающая (неосвещенное место)")
                        .checkbox
