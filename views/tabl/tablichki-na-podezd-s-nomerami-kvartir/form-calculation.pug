                        input.calc__add_checkbox(type="checkbox", for="courier", name="add", value="Доставка курьером")
                        .checkbox
                        .checkbox_label Доставка курьером (+ 150 руб.)
                    label#pvc
                        input.calc__add_checkbox(type="radio", for="pvc", name="base", value="ПВХ (4 мм)", checked)
                        .checkbox
