                    img(src="/dist/image/tabl/tablichki-klass-energoeffectivnosti-doma/tabl-energy-1.jpg", alt="Табличка 1", data-tabl="/tabl/tablichki-klass-energoeffectivnosti-doma/tabl-energy-1.jpg")
                .calc__add
                    p.calc__add_label дополнительные опции
                    label#lamination
                        input.calc__add_checkbox(type="checkbox", for="lamination", name="add", value="Ламинирование (+5 лет гарантии)")
                        .checkbox
                        .checkbox_label Ламинирование (5 лет гарантии)
                    label#reflective
                        input.calc__add_checkbox(type="checkbox", for="reflective", name="add", value="Световозвращающая (неосвещенное место)")
                        .checkbox
                        .checkbox_label Световозвращающая (неосвещенное место)
                    label#courier
                        input.calc__add_checkbox(type="checkbox", for="courier", name="add", value="Доставка курьером")
                        .checkbox
                        .checkbox_label Доставка курьером (+ 150 руб.)
                    label#pvc
                        input.calc__add_checkbox(type="radio", for="pvc", name="base", value="ПВХ (4 мм)", checked)
                        .checkbox
                        .checkbox_label ПВХ (4 мм)
                    label#aluminium
                        input.calc__add_checkbox(type="radio", for="aluminium", name="base", value="Композитный алюминий")
                        .checkbox
                        .checkbox_label Композитный алюминий
                .calc__number
                    .calc__number_label количество
                    label#one
                        .radio_label 1
                        input.calc__number_radio(type="radio", for="one", name="number", value="1" checked)
                        .radio
                    label#two
                        .radio_label 2
                        input.calc__number_radio(type="radio", for="two", name="number", value="2")
                        .radio
                    label#three
                        .radio_label 3
                        input.calc__number_radio(type="radio", for="three", name="number", value="3")
                        .radio
                    input.calc__number_enter(type="text", name="number", placeholder="кол-во")
                .calc__discount
                    .calc__discount_label скидка
                    span 10%
                    span 15%
                    span 20%
                .calc__submit
                    p.cost Итого: 
                            span.cost_result 1100 руб.
                    input.button(type="submit" value="оформить заказ")
                    
        